{{>header}}
<section id="viewEditFlight">
    <h2>Edit existing flight</h2>
    <form method="post" action="#/flights/editFlight">
        <input type="hidden" name="postId" value="{{flights._id}}" />
        <label>Destination:</label>
        <input type="text" name="destination" placeholder="Destination" value="{{flights.destination}}" >
        <label>Origin:</label>
        <input type="text" name="origin" placeholder="Origin" value="{{flights.origin}}">
        <label>Departure Time:</label>
        <input type="time" name="departure" value="{{flights.time}}">
        <label>Departure Date:</label>
        <input type="time" name="departureDate">
        <label>Number of Seats:</label>
        <input type="number" name="seats" value="{{flights.seats}}">
        <label>Cost per seat:</label>
        <input type="number" step="2" name="cost" value="{{flights.cost}}">
        <label>Image:</label>
        <input type="text" name="img" value="{{flights.img}}">
        <label>Is Public:</label>
        <input type="checkbox" name="public" checked>
        <input type="submit" class="save-changes" value="Save Changes">
    </form>
</section>
{{>footer}}